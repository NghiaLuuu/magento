# ==================================================
# HƯỚNG DẪN: Copy file này thành .env và điền thông tin
# cp .env.example .env
# ==================================================

# Magento Composer Credentials
# Lấy từ: https://marketplace.magento.com/ > My Profile > Access Keys
PUBLIC_KEY=your_public_key_here
PRIVATE_KEY=your_private_key_here

# Project Configuration
# Thay đổi PROJECT_NAME cho mỗi project mới để tránh conflict
PROJECT_NAME=magento
COMPOSE_PROJECT_NAME=magento-docker

# Container Names (tự động generate từ PROJECT_NAME)
CONTAINER_PHP=${PROJECT_NAME}_php
CONTAINER_NGINX=${PROJECT_NAME}_nginx
CONTAINER_MYSQL=${PROJECT_NAME}_mysql
CONTAINER_ELASTICSEARCH=${PROJECT_NAME}_elasticsearch

# Ports (QUAN TRỌNG: Thay đổi nếu chạy nhiều project cùng lúc)
# Project 1: 80, 3307, 9201
# Project 2: 81, 3308, 9202
# Project 3: 82, 3309, 9203
PORT_WEB=80
PORT_MYSQL=3307
PORT_ELASTICSEARCH=9201

# Database Configuration
MYSQL_ROOT_PASSWORD=root123
MYSQL_DATABASE=magento
MYSQL_USER=magento
MYSQL_PASSWORD=magento123

# Elasticsearch Configuration
ES_MEMORY=512m
CLUSTER_NAME=magento-cluster
NODE_NAME=magento-node

# Magento Admin Configuration
ADMIN_FIRSTNAME=Admin
ADMIN_LASTNAME=User
ADMIN_EMAIL=admin@example.com
ADMIN_USER=admin
ADMIN_PASSWORD=admin123
BASE_URL=http://localhost/

# PHP Configuration
PHP_MEMORY_LIMIT=2G
