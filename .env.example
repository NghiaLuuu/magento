# ==================================================
# HƯỚNG DẪN: Copy file này thành .env và điền thông tin
# cp .env.example .env
# ==================================================

# Magento Composer Credentials
# Lấy từ: https://marketplace.magento.com/ > My Profile > Access Keys
PUBLIC_KEY=your_public_key_here
PRIVATE_KEY=your_private_key_here

# Project Configuration
PROJECT_NAME=magento
COMPOSE_PROJECT_NAME=magento-docker

# Container Names (sử dụng PROJECT_NAME để tránh conflict)
CONTAINER_PHP=${PROJECT_NAME}_php
CONTAINER_NGINX=${PROJECT_NAME}_nginx
CONTAINER_MYSQL=${PROJECT_NAME}_mysql
CONTAINER_ELASTICSEARCH=${PROJECT_NAME}_elasticsearch

# Ports (thay đổi nếu chạy nhiều project)
PORT_WEB=80
PORT_MYSQL=3307
PORT_ELASTICSEARCH=9201

# Database Configuration
MYSQL_ROOT_PASSWORD=root123
MYSQL_DATABASE=${PROJECT_NAME}
MYSQL_USER=${PROJECT_NAME}
MYSQL_PASSWORD=${PROJECT_NAME}123

# Elasticsearch Configuration
ES_MEMORY=512m
CLUSTER_NAME=${PROJECT_NAME}-cluster
NODE_NAME=${PROJECT_NAME}-node

# Magento Admin Configuration
ADMIN_FIRSTNAME=Admin
ADMIN_LASTNAME=User
ADMIN_EMAIL=admin@example.com
ADMIN_USER=admin
ADMIN_PASSWORD=admin123
BASE_URL=http://localhost/

# PHP Configuration
PHP_MEMORY_LIMIT=2G
