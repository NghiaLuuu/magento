FROM php:8.2-fpm

# Build argument cho PHP memory limit (có thể thay đổi từ docker-compose.yml)
ARG PHP_MEMORY_LIMIT=2G

ENV DEBIAN_FRONTEND=noninteractive

# Cài gói hệ thống cần thiết cho Magento 2
RUN apt-get update && apt-get install -y \
    libfreetype6-dev \
    libjpeg62-turbo-dev \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libicu-dev \
    libzip-dev \
    libxslt1-dev \
    libssl-dev \
    libsodium-dev \
    git zip unzip curl \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Cấu hình GD extension với freetype và jpeg
RUN docker-php-ext-configure gd --with-freetype --with-jpeg

# Cài PHP extensions cần thiết cho Magento 2.4.7+
RUN docker-php-ext-install -j$(nproc) \
    pdo_mysql \
    mbstring \
    zip \
    soap \
    intl \
    bcmath \
    gd \
    xsl \
    opcache \
    sockets \
    sodium \
    simplexml \
    ftp

# Cài Composer 2.9
COPY --from=composer:2.9 /usr/bin/composer /usr/bin/composer

# Cấu hình PHP: memory limit và opcache (tối ưu cho Magento 2.4.x)
RUN echo "memory_limit=${PHP_MEMORY_LIMIT}" > /usr/local/etc/php/conf.d/zz-memory.ini \
    && echo "[opcache]" > /usr/local/etc/php/conf.d/opcache.ini \
    && echo "opcache.enable=1" >> /usr/local/etc/php/conf.d/opcache.ini \
    && echo "opcache.enable_cli=1" >> /usr/local/etc/php/conf.d/opcache.ini \
    && echo "opcache.memory_consumption=512" >> /usr/local/etc/php/conf.d/opcache.ini \
    && echo "opcache.interned_strings_buffer=16" >> /usr/local/etc/php/conf.d/opcache.ini \
    && echo "opcache.max_accelerated_files=20000" >> /usr/local/etc/php/conf.d/opcache.ini \
    && echo "opcache.validate_timestamps=0" >> /usr/local/etc/php/conf.d/opcache.ini \
    && echo "opcache.revalidate_freq=0" >> /usr/local/etc/php/conf.d/opcache.ini \
    && echo "opcache.save_comments=1" >> /usr/local/etc/php/conf.d/opcache.ini

# Đặt working directory
WORKDIR /var/www/html/magento
